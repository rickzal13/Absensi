unit Lkelas;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, pngimage, ExtCtrls, StdCtrls, Grids, DBGrids, ImgList;

type
  TFkelas = class(TForm)
    Panel1: TPanel;
    txt_cari: TEdit;
    DBGrid1: TDBGrid;
    ComboBox1: TComboBox;
    Panel2: TPanel;
    Image7: TImage;
    Image8: TImage;
    Label1: TLabel;
    Label2: TLabel;
    Button1: TButton;
    ImageList1: TImageList;
    procedure Image3Click(Sender: TObject);
    procedure txt_cariChange(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Fkelas: TFkelas;

implementation

uses Unit12;

{$R *.dfm}

procedure TFkelas.txt_cariChange(Sender: TObject);
begin
if ComboBox1.Text = 'KODE JURUSAN' then
  begin
    with dm.ADO_kelas do
    begin
      sql.Clear;
      sql.Text:= ('select * from tbkelas where kode_jurusan like '+QuotedStr('%'+txt_cari.Text+'%'));
      Open;
      DBGrid1.DataSource:= dm.Data_kelas;
    end;
  end
else if ComboBox1.Text = 'JURUSAN' then
  begin
    with dm.ADO_kelas do
    begin
      sql.Clear;
      sql.Text:= ('select * from tbkelas where jurusan like '+QuotedStr('%'+txt_cari.Text+'%'));
      Open;
      DBGrid1.DataSource:= dm.Data_kelas;
    end;
  end
end;

procedure TFkelas.Image3Click(Sender: TObject);
begin
close;
end;

end.
